---
import { getCollection } from 'astro:content'
import Layout from '@layouts/Layout.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import LinkButton from '@components/LinkButton.astro'
import Hr from '@components/Hr.astro'
import Card from '@components/Card'
import Socials from '@components/Socials.astro'
import { getSortedPosts } from '@utils/getSortedPosts'
import { SITE, SOCIALS } from '@config'
import BottomNarbar from '@components/BottomNarbar'

const posts = await getCollection('blog')

const sortedPosts = getSortedPosts(posts)
const featuredPosts = sortedPosts.filter(({ data }) => data.featured)
const recentPosts = sortedPosts.filter(({ data }) => !data.featured)

const socialCount = SOCIALS.filter(social => social.active).length
---

<Layout>
    <Header />
    <BottomNarbar />
    <!-- <div class="container mx-auto">
         <video autoplay muted loop>
				<source src="videos/video-2@c.mp4" type="video/mp4">
			</video>
</div> -->

    <div class="overflow-hidden">
        <div class="fixed inset-0 z-[-1] h-full w-full">
            <video
                class="absolute h-full w-full object-cover"
                autoplay
                muted
                loop
                id="background-video"
            >
                <source src="/videos/video-1@c.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </div>

        <div class="relative z-10 mt-[20vh] p-5 text-left text-white">
            <h1 class="text-5xl font-bold drop-shadow-lg">Corinthians 13:4</h1>
            <p class="mt-4 text-5xl drop-shadow-lg">
                Love is patient and is kind; love envies not, does not brag
                about itself, is not puffed up.
            </p>
        </div>
        
        <!-- New image layout grid starts here (line 53) -->
        <div class="max-w-6xl mx-auto px-4 py-12 relative z-10">
            <!-- Header with Today and profile image -->
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-3xl font-bold text-white">Today</h2>
                <div class="w-10 h-10 rounded-full overflow-hidden bg-white">
                    <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="Profile" class="w-full h-full object-cover">
                </div>
            </div>
            
            <!-- Grid Layout -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <!-- Card 1 - TRAVEL -->
                <div class="relative overflow-hidden rounded-2xl">
                    <img src="https://images.unsplash.com/photo-1501594907352-04cda38ebc29" alt="Mountains" 
                        class="w-full h-[300px] object-cover">
                    <div class="absolute top-5 left-5 bg-white/80 text-gray-800 px-3 py-1 text-xs font-semibold rounded">
                        TRAVEL
                    </div>
                    <div class="absolute bottom-5 left-5 max-w-[80%]">
                        <h3 class="text-white text-xl font-semibold leading-tight">
                            5 Inspiring Apps<br>for Your Next Trip
                        </h3>
                    </div>
                </div>
                
                <!-- Card 2 - HOW TO -->
                <div class="relative overflow-hidden rounded-2xl">
                    <img src="https://images.unsplash.com/photo-1518531933037-91b2f5f229cc" alt="Green leaves" 
                        class="w-full h-[300px] object-cover">
                    <div class="absolute top-5 left-5 bg-white/80 text-gray-800 px-3 py-1 text-xs font-semibold rounded">
                        HOW TO
                    </div>
                    <div class="absolute bottom-5 left-5 max-w-[80%]">
                        <h3 class="text-white text-xl font-semibold leading-tight">
                            Contemplate the Meaning<br>of Life Twice a Day
                        </h3>
                    </div>
                </div>
                
                <!-- Card 3 - STEPS -->
                <div class="relative overflow-hidden rounded-2xl">
                    <img src="https://images.unsplash.com/photo-1529316738131-4d0e0761a38e" alt="White staircase" 
                        class="w-full h-[300px] object-cover">
                    <div class="absolute top-5 left-5 bg-white/80 text-gray-800 px-3 py-1 text-xs font-semibold rounded">
                        STEPS
                    </div>
                    <div class="absolute bottom-5 left-5 max-w-[80%]">
                        <h3 class="text-white text-xl font-semibold leading-tight">
                            Urban Exploration Apps<br>for the Vertically-Inclined
                        </h3>
                    </div>
                </div>
                
                <!-- Card 4 - HATS -->
                <div class="relative overflow-hidden rounded-2xl">
                    <img src="https://images.unsplash.com/photo-1556306535-0f09a537f0a3" alt="Person with hat" 
                        class="w-full h-[300px] object-cover">
                    <div class="absolute top-5 left-5 bg-white/80 text-gray-800 px-3 py-1 text-xs font-semibold rounded">
                        HATS
                    </div>
                    <div class="absolute bottom-5 left-5 max-w-[80%]">
                        <h3 class="text-white text-xl font-semibold leading-tight">
                            Take Control of Your Hat Life<br>With This Stunning New App
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        
        <Footer />
    </div>
</Layout>
